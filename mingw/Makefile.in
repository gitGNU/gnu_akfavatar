	-rm -f *~
	-rm -f *.o
	-rm -f *.ppu *.gpi *.gpm
	-rm -f alert.c
	-rm -f font.c
	-rm -f rgb.h
	-rm -f pascal/*.o pascal/*.gpi pascal/*.gpm pascal/*.ppu
	-rm -f pascal/link.res pascal/ppas.sh

mostlyclean: clean
	-rm -f example
	-rm -f lua-akfavatar lua-akfavatar-bin
	-rm -f a.out *.a *.so
	-rm -f *.dll
	-rm -f $(LIBNAME) $(SONAME)
	-rm -f version.h
	-rm -f version.texi
	-rm -f multiply-bin multiply
	-rm -f multiplizieren-bin multiplizieren
