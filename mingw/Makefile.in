	             $(srcdir)/mingw/akfavatar-vorbis.def
	$(CC) -o $@ -shared $(srcdir)/mingw/akfavatar-vorbis.def \
	  akfavatar-vorbis.o avtvorbis.o stb_vorbis.o \
	  akfavatar-vorbis-info.o \
