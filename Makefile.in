# Ogg Vorbis files with how many channels should be supported?
# output is limited to 2 channels, but this value may be higher
vorbis_max_channels = 8

# if you change this, you also have to change the file avatar-default.c
default_avatar = $(srcdir)/male_user.xpm

SHELL = /bin/sh
INSTALL_PROGRAM = $(INSTALL) -c -m 755
INSTALL_DATA = $(INSTALL) -c -m 644

# does not depend on prefix!
LUA_PATH = /usr/local/share/lua/5.1/
LUA_CPATH = /usr/local/lib/lua/5.1/

SOX = sox
ENSCRIPT = enscript

# Soundfile for the alert (\a)
# may be any format that sox supports
# should be higher quality; it will be converted into the needed format
ALERT = $(srcdir)/alert.flac

# names for packages
PKGNAME = akfavatar-$(VERSION).$(SUBVERSION).$(REVISION)$(VARIANT)
BINPKGNAME = akfavatar-$(VERSION).$(SUBVERSION).$(REVISION)$(VARIANT).bin


.PHONY: all check doc txt info install install-strip installdirs uninstall \
	html dvi pdf ps man install-html install-dvi install-pdf install-ps \
	clean mostlyclean distclean maintainer-clean maintainerclean dist \
	mingw dist-mingw about

LUA_MODULES = \
	  $(srcdir)/lua/akfavatar/dir.en.about \
	  $(srcdir)/lua/akfavatar/dir.de.about \
	  $(srcdir)/lua/akfavatar/female_user.lua \
	  $(srcdir)/lua/akfavatar/male_user.lua \
	  $(srcdir)/lua/akfavatar/teacher.lua \
	  $(srcdir)/lua/akfavatar/gnu_head.lua \
	  $(srcdir)/lua/akfavatar/info_icon.lua \
	  $(srcdir)/lua/akfavatar/audio1.lua \
	  $(srcdir)/lua/akfavatar/akfoerster.lua \
	  $(srcdir)/lua/akfavatar/positive.lua \
	  $(srcdir)/lua/akfavatar/negative.lua \
	  $(srcdir)/lua/akfavatar/neutral.lua \
	  $(srcdir)/lua/akfavatar/questionary.lua \
	  $(srcdir)/lua/akfavatar/Fragebogen.lua \
	  $(srcdir)/lua/akfavatar/person.lua \
	  $(srcdir)/lua/akfavatar/utf8.lua \
	  $(srcdir)/lua/akfavatar/utf8.en.about \
	  $(srcdir)/lua/akfavatar/ar.lua \
	  $(srcdir)/lua/akfavatar/avtdemo.lua

all: $(TARGET)

dist-bin: $(DISTBIN)

default: libakfavatar.so libakfavatar.a libavtaddons.a \
	lua-akfavatar lua-akfavatar.so base64.so akfavatar-term.so \
	akfavatar-vorbis.so akfavatar-canvas.so about
	@echo '*'
	@echo '* use "make install" or "make install-strip"'
	@echo '* with root-privileges to install it.'
	@echo '*'

nolua: libakfavatar.so libakfavatar.a libavtaddons.a
	@echo '*'
	@echo '* use "make install" or "make install-strip"'
	@echo '* with root-privileges to install it.'
	@echo '*'

mingw:
	$(MAKE) -f $(srcdir)/mingw/Makefile \
	  srcdir="$(srcdir)" CFLAGS="$(CFLAGS)" LDFLAGS="$(LDFLAGS)" \
	  all

mingw-nolua:
	$(MAKE) -f $(srcdir)/mingw/Makefile \
	  srcdir="$(srcdir)" CFLAGS="$(CFLAGS)" LDFLAGS="$(LDFLAGS)" \
	  nolua

dist-mingw:
	$(MAKE) -f $(srcdir)/mingw/Makefile srcdir=$(srcdir) dist-bin

Makefile: $(srcdir)/configure $(srcdir)/Makefile.in
	./config.status

# alert.au should be in the sourcecode-distribution
$(srcdir)/alert.au: $(ALERT)
	$(SOX) $(ALERT) --comment "" -e mu-law -c 1 $@ rate 8k

alert.c: $(srcdir)/alert.au $(srcdir)/data2c
	$(AWK) -f $(srcdir)/data2c -v name=avt_alert_data \
	  $(srcdir)/alert.au > $@

filechooser.o: $(srcdir)/filechooser.c $(srcdir)/akfavatar.h \
	       $(srcdir)/avtaddons.h $(srcdir)/avtinternals.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -c -o $@ $(srcdir)/filechooser.c

colorchooser.o: $(srcdir)/colorchooser.c $(srcdir)/akfavatar.h
	$(CC) $(CFLAGS) -c -o $@ $(srcdir)/colorchooser.c

rgb.h: $(srcdir)/rgb.txt $(srcdir)/rgb2c
	$(AWK) -f $(srcdir)/rgb2c $(srcdir)/rgb.txt > $@

avatar.o: $(srcdir)/avatar.c $(srcdir)/akfavatar.h $(srcdir)/avtinternals.h \
          version.h rgb.h \
          $(srcdir)/balloonpointer.xbm $(srcdir)/circle.xbm \
          $(srcdir)/btn.xpm $(srcdir)/btn_yes.xbm $(srcdir)/btn_no.xbm \
          $(srcdir)/btn_up.xbm $(srcdir)/btn_down.xbm \
          $(srcdir)/btn_left.xbm $(srcdir)/btn_right.xbm \
          $(srcdir)/btn_ff.xbm $(srcdir)/btn_fb.xbm \
          $(srcdir)/btn_pause.xbm $(srcdir)/btn_stop.xbm \
          $(srcdir)/btn_help.xbm $(srcdir)/btn_cancel.xbm \
          $(srcdir)/btn_eject.xbm $(srcdir)/btn_circle.xbm \
          $(srcdir)/akfavatar.xpm
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -I. -c $(srcdir)/avatar.c

avatar-default.o: $(srcdir)/avatar-default.c $(default_avatar) $(srcdir)/akfavatar.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -c -o $@ $(srcdir)/avatar-default.c

avatar-audio.o: $(srcdir)/avatar-audio.c $(srcdir)/akfavatar.h \
	        $(srcdir)/avtinternals.h alert.c
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -I. -c -o $@ $(srcdir)/avatar-audio.c

ucsfont7x14.c: $(srcdir)/7x14.bdf $(srcdir)/bdf2c
	$(AWK) -f $(srcdir)/bdf2c $(srcdir)/7x14.bdf > $@

ucsfont9x18.c: $(srcdir)/9x18.bdf $(srcdir)/bdf2c
	$(AWK) -f $(srcdir)/bdf2c $(srcdir)/9x18.bdf > $@

font.o: $(srcdir)/font.c ucsfont7x14.c ucsfont9x18.c
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -I. -c -o $@ $(srcdir)/font.c

libakfavatar.a: avatar.o avatar-default.o avatar-audio.o font.o
	$(AR) rcu $@ avatar.o avatar-default.o avatar-audio.o font.o
	-$(RANLIB) $@

avatar.lo: $(srcdir)/avatar.c $(srcdir)/akfavatar.h version.h rgb.h \
           $(srcdir)/balloonpointer.xbm $(srcdir)/circle.xbm \
           $(srcdir)/btn.xpm $(srcdir)/btn_yes.xbm $(srcdir)/btn_no.xbm \
           $(srcdir)/btn_up.xbm $(srcdir)/btn_down.xbm \
           $(srcdir)/btn_left.xbm $(srcdir)/btn_right.xbm \
           $(srcdir)/btn_ff.xbm $(srcdir)/btn_fb.xbm \
           $(srcdir)/btn_pause.xbm $(srcdir)/btn_stop.xbm \
           $(srcdir)/btn_help.xbm $(srcdir)/btn_cancel.xbm \
           $(srcdir)/btn_eject.xbm $(srcdir)/btn_circle.xbm \
           $(srcdir)/akfavatar.xpm $(srcdir)/avtinternals.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -I. -c -fPIC -o $@ $(srcdir)/avatar.c

avatar-default.lo: $(srcdir)/avatar-default.c $(default_avatar) $(srcdir)/akfavatar.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -c -fPIC -o $@ \
	  $(srcdir)/avatar-default.c

avatar-audio.lo: $(srcdir)/avatar-audio.c $(srcdir)/akfavatar.h \
	         $(srcdir)/avtinternals.h alert.c
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -I. -c -fPIC -o $@ \
	  $(srcdir)/avatar-audio.c

font.lo: $(srcdir)/font.c ucsfont7x14.c ucsfont9x18.c
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -I. -c -fPIC -o $@ $(srcdir)/font.c

libakfavatar.so: avatar.lo avatar-default.lo avatar-audio.lo font.lo
	$(CC) -shared \
	      -Wl,-soname,$(SONAME) -o $(LIBNAME) -fPIC \
	      avatar.lo avatar-default.lo avatar-audio.lo font.lo \
	      $(SDL_LDFLAGS) $(LDFLAGS)
	-ln -sf $(LIBNAME) $(SONAME)
	-ln -sf $(LIBNAME) libakfavatar.so

example: $(srcdir)/example.c libakfavatar.so
	$(CC) $(CFLAGS) -I$(srcdir) -o $@ $(srcdir)/example.c \
	  -L. -lakfavatar $(LDFLAGS)

avtccio.o: $(srcdir)/avtccio.c $(srcdir)/avtaddons.h $(srcdir)/akfavatar.h
	$(CC) $(CFLAGS) -I$(srcdir) -c -o $@ $(srcdir)/avtccio.c

avtcwio.o: $(srcdir)/avtcwio.c $(srcdir)/avtaddons.h $(srcdir)/akfavatar.h
	$(CC) $(CFLAGS) -I$(srcdir) -c -o $@ $(srcdir)/avtcwio.c

avtreadfile.o: $(srcdir)/avtreadfile.c $(srcdir)/avtaddons.h
	$(CC) $(CFLAGS) -I$(srcdir) -c -o $@ $(srcdir)/avtreadfile.c

avtterm.o: $(srcdir)/avtterm.c $(srcdir)/avtaddons.h $(srcdir)/akfavatar.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -c -o $@ $(srcdir)/avtterm.c

avttermsys.o: $(srcdir)/avttermsys.c $(srcdir)/avttermsys.h \
                $(srcdir)/akfavatar.h version.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -I. -c -o $@ $(srcdir)/avttermsys.c

avtmsg.o: $(srcdir)/avtmsg.c $(srcdir)/avtaddons.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -c -o $@ $(srcdir)/avtmsg.c

avtgrmsg.o: $(srcdir)/avtgrmsg.c
	$(CC) $(CFLAGS) -c -o $@ $(srcdir)/avtgrmsg.c

arch.o: $(srcdir)/arch.c $(srcdir)/avtaddons.h
	$(CC) $(CFLAGS) -c -o $@ $(srcdir)/arch.c

avtvorbis.o: $(srcdir)/avtvorbis.c $(srcdir)/avtaddons.h $(srcdir)/stb_vorbis.c
	$(CC) $(CFLAGS) -c -o $@ $(srcdir)/avtvorbis.c

stb_vorbis.o: $(srcdir)/stb_vorbis.c
	$(CC) $(CFLAGS) -c -o $@ \
	  -D_GNU_SOURCE=1 \
	  -DSTB_VORBIS_NO_PUSHDATA_API \
	  -DSTB_VORBIS_MAX_CHANNELS=$(vorbis_max_channels) \
	  $(srcdir)/stb_vorbis.c

libavtaddons.a: filechooser.o avtterm.o avttermsys.o arch.o \
                avtccio.o avtcwio.o avtmsg.o avtgrmsg.o avtreadfile.o \
                colorchooser.o avtvorbis.o stb_vorbis.o
	$(AR) rcu $@ filechooser.o avtterm.o avttermsys.o arch.o \
	             avtccio.o avtcwio.o avtmsg.o avtgrmsg.o avtreadfile.o \
	             colorchooser.o avtvorbis.o stb_vorbis.o
	-$(RANLIB) $@

avtposix.o: $(srcdir)/avtposix.c
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -c -o $@ $(srcdir)/avtposix.c

avatarsay.o: $(srcdir)/avatarsay.c $(srcdir)/akfavatar.h $(srcdir)/avtinternals.h \
	     $(srcdir)/avtaddons.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -DPREFIX=\"$(exec_prefix)\" -I$(srcdir) -I. \
	  -c -o $@ $(srcdir)/avatarsay.c

# avatarsay dynamically linked
avatarsay-bin: avatarsay.o avtposix.o libakfavatar.so \
               arch.o avtterm.o avttermsys.o colorchooser.o filechooser.o \
               avtreadfile.o avtmsg.o avtgrmsg.o
	$(CC) -o $@ avatarsay.o avtposix.o \
	      arch.o avtterm.o avttermsys.o colorchooser.o filechooser.o \
	      avtreadfile.o avtmsg.o avtgrmsg.o \
	      -L. -lakfavatar $(LDFLAGS) $(AVATARSAY_LDFLAGS)

# avatarsay with statical libakfavatar.a
avatarsay-s: avatarsay.o avtposix.o libakfavatar.a \
             arch.o avtterm.o avttermsys.o colorchooser.o filechooser.o \
             avtreadfile.o avtmsg.o avtgrmsg.o
	$(CC) -o $@ avatarsay.o avtposix.o -L. libakfavatar.a \
	     arch.o avtterm.o avttermsys.o colorchooser.o filechooser.o \
             avtreadfile.o avtmsg.o avtgrmsg.o \
	   $(SDL_LDFLAGS) $(LDFLAGS) $(AVATARSAY_LDFLAGS)

avatarsay: $(srcdir)/avatarsay.sh avatarsay-bin
	install -m 755 $(srcdir)/avatarsay.sh $@

# lua-akfavatar dynamically linked
lua-akfavatar-bin: lua-akfavatar-prg.o lua-avt.o avtreadfile.o \
                   filechooser.o colorchooser.o avtmsg.o avtgrmsg.o
	$(CC) -o $@ lua-akfavatar-prg.o lua-avt.o avtreadfile.o \
	     filechooser.o colorchooser.o avtmsg.o avtgrmsg.o \
	     -L. -lakfavatar \
	     $(LUA_LDFLAGS) $(LDFLAGS)

lua-akfavatar: $(srcdir)/lua-akfavatar.sh lua-akfavatar-bin
	install -m 755 $(srcdir)/lua-akfavatar.sh $@

lua-akfavatar-prg.o: $(srcdir)/lua/lua-akfavatar-prg.c
	$(CC) $(CFLAGS) $(LUA_CFLAGS) -I$(srcdir) -c -o $@ \
	  $(srcdir)/lua/lua-akfavatar-prg.c

lua-avt.o: $(srcdir)/lua/lua-avt.c $(srcdir)/akfavatar.h
	$(CC) $(CFLAGS) $(LUA_CFLAGS) -I$(srcdir) -c -o $@ \
	  $(srcdir)/lua/lua-avt.c

# Lua-Modules
lua-akfavatar.so: lua-avt.lo filechooser.lo colorchooser.lo avtmsg.lo avtgrmsg.lo
	$(CC) -o $@ -shared -fpic lua-avt.lo filechooser.lo colorchooser.lo \
	     avtmsg.lo avtgrmsg.lo -L. -lakfavatar $(LDFLAGS)

akfavatar-vorbis.so: akfavatar-vorbis.lo avtvorbis.lo stb_vorbis.lo
	$(CC) -o $@ -shared -fpic akfavatar-vorbis.lo avtvorbis.lo stb_vorbis.lo \
	  -L. -lakfavatar -lm $(LDFLAGS)

avtvorbis.lo: $(srcdir)/avtvorbis.c $(srcdir)/avtaddons.h $(srcdir)/stb_vorbis.c
	$(CC) $(CFLAGS) -fpic -c -o $@ $(srcdir)/avtvorbis.c

akfavatar-vorbis.lo: $(srcdir)/lua/akfavatar-vorbis.c $(srcdir)/stb_vorbis.c
	$(CC) $(CFLAGS) $(LUA_CFLAGS) -I$(srcdir) -fpic -c -o $@ \
	  $(srcdir)/lua/akfavatar-vorbis.c

stb_vorbis.lo: $(srcdir)/stb_vorbis.c
	$(CC) $(CFLAGS) \
	  -D_GNU_SOURCE=1 \
	  -DSTB_VORBIS_NO_PUSHDATA_API \
	  -DSTB_VORBIS_MAX_CHANNELS=$(vorbis_max_channels) \
	  -fpic -c -o $@ $(srcdir)/stb_vorbis.c

base64.so: lbase64.lo
	$(CC) -o $@ -shared -fpic lbase64.lo $(LDFLAGS)

akfavatar-term.so: akfavatar-term.lo avtterm.lo avttermsys.lo \
	          avtmsg.lo avtgrmsg.lo
	$(CC) -o $@ -shared -fpic akfavatar-term.lo avtterm.lo avttermsys.lo \
	     avtmsg.lo avtgrmsg.lo -L. -lakfavatar $(LDFLAGS)

akfavatar-term.lo: $(srcdir)/lua/akfavatar-term.c $(srcdir)/avtaddons.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) $(LUA_CFLAGS) -I$(srcdir) -c -fpic -o $@ \
	  $(srcdir)/lua/akfavatar-term.c

avtterm.lo: $(srcdir)/avtterm.c $(srcdir)/avtaddons.h $(srcdir)/akfavatar.h
	 $(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -fpic -c -o $@ $(srcdir)/avtterm.c

avttermsys.lo: $(srcdir)/avttermsys.c $(srcdir)/avttermsys.h \
	        $(srcdir)/akfavatar.h version.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -I. -fpic -c -o $@ $(srcdir)/avttermsys.c

akfavatar-canvas.so: akfavatar-canvas.lo
	$(CC) -o $@ -shared -fpic akfavatar-canvas.lo -L. -lakfavatar -lm $(LDFLAGS)

akfavatar-canvas.lo: $(srcdir)/lua/akfavatar-canvas.c
	$(CC) $(SDL_CFLAGS) $(CFLAGS) $(LUA_CFLAGS) -I$(srcdir) -c -fpic -o $@ \
	  $(srcdir)/lua/akfavatar-canvas.c

lbase64.lo: $(srcdir)/lua/lbase64.c
	$(CC) $(CFLAGS) $(LUA_CFLAGS) -I$(srcdir) -fpic -c -o $@ \
	  $(srcdir)/lua/lbase64.c

lua-avt.lo: $(srcdir)/lua/lua-avt.c
	  $(CC) $(SDL_CFLAGS) $(CFLAGS) $(LUA_CFLAGS) -I$(srcdir) -c -fpic -o $@ \
	  -DMODULE $(srcdir)/lua/lua-avt.c

filechooser.lo: $(srcdir)/filechooser.c $(srcdir)/avtaddons.h \
                $(srcdir)/avtinternals.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -c -fpic -o $@ \
	  $(srcdir)/filechooser.c

colorchooser.lo: $(srcdir)/colorchooser.c $(srcdir)/avtaddons.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -c -fpic -o $@ \
	  $(srcdir)/colorchooser.c

avtmsg.lo: $(srcdir)/filechooser.c $(srcdir)/avtaddons.h \
           $(srcdir)/avtinternals.h
	$(CC) $(SDL_CFLAGS) $(CFLAGS) -I$(srcdir) -c -fpic -o $@ \
	  $(srcdir)/avtmsg.c

avtgrmsg.lo: $(srcdir)/avtgrmsg.c
	$(CC) $(CFLAGS) -fpic -c -o $@ $(srcdir)/avtgrmsg.c

installdirs:
	-[ -d $(DESTDIR)$(includedir) ]  || $(INSTALL) -d $(DESTDIR)$(includedir)
	-[ -d $(DESTDIR)$(libdir) ]      || $(INSTALL) -d $(DESTDIR)$(libdir)
	-[ -d $(DESTDIR)$(bindir) ]      || $(INSTALL) -d $(DESTDIR)$(bindir)
	-[ -d $(DESTDIR)$(infodir) ]     || $(INSTALL) -d $(DESTDIR)$(infodir)
	-[ -d $(DESTDIR)$(mandir) ]      || $(INSTALL) -d $(DESTDIR)$(mandir)
	-[ -d $(DESTDIR)$(mandir)/man1 ] || $(INSTALL) -d $(DESTDIR)$(mandir)/man1
	-[ -d $(DESTDIR)$(mandir)/man3 ] || $(INSTALL) -d $(DESTDIR)$(mandir)/man3
	-[ -d $(DESTDIR)$(docdir) ]      || $(INSTALL) -d $(DESTDIR)$(docdir)
	-[ -d $(DESTDIR)$(LUA_PATH)/akfavatar ] \
	   || $(INSTALL) -d $(DESTDIR)$(LUA_PATH)/akfavatar
	-[ -d $(DESTDIR)$(LUA_CPATH) ] \
	   || $(INSTALL) -d $(DESTDIR)$(LUA_CPATH)

install: libakfavatar.so libakfavatar.a installdirs install-info install-man
	$(INSTALL_DATA) $(srcdir)/akfavatar.h $(DESTDIR)$(includedir)
	$(INSTALL_DATA) $(srcdir)/avtaddons.h $(DESTDIR)$(includedir)
	$(INSTALL_DATA) $(LIBNAME) $(DESTDIR)$(libdir)
	-ln -sf $(LIBNAME) $(DESTDIR)$(libdir)/$(SONAME)
	-ln -sf $(LIBNAME) $(DESTDIR)$(libdir)/libakfavatar.so
	$(INSTALL_DATA) libakfavatar.a $(DESTDIR)$(libdir)
	$(INSTALL_DATA) libavtaddons.a $(DESTDIR)$(libdir)
	-$(LDCONFIG) $(libdir)
	-$(INSTALL_PROGRAM) lua-akfavatar-bin $(DESTDIR)$(bindir)/lua-akfavatar
	$(INSTALL_PROGRAM) $(srcdir)/avtcmd $(DESTDIR)$(bindir)
	$(INSTALL_DATA) $(srcdir)/README $(DESTDIR)$(docdir)
	$(INSTALL_DATA) $(srcdir)/AUTHORS $(DESTDIR)$(docdir)
	$(INSTALL_DATA) $(srcdir)/COPYING $(DESTDIR)$(docdir)
	$(INSTALL_DATA) $(srcdir)/NEWS $(DESTDIR)$(docdir)
	$(INSTALL_DATA) $(LUA_MODULES) $(DESTDIR)$(LUA_PATH)/akfavatar
	-$(INSTALL_DATA) lua-akfavatar.so $(DESTDIR)$(LUA_CPATH)
	-$(INSTALL_DATA) base64.so $(DESTDIR)$(LUA_CPATH)
	-$(INSTALL_DATA) akfavatar-vorbis.so $(DESTDIR)$(LUA_CPATH)
	-$(INSTALL_DATA) akfavatar-term.so $(DESTDIR)$(LUA_CPATH)
	-$(INSTALL_DATA) akfavatar-canvas.so $(DESTDIR)$(LUA_CPATH)
	-rm -f $(DESTDIR)$(LUA_PATH)/lua-akfavatar.lua
	@echo '*'
	@echo '* make install-desktop-menu: to install lua-akfavatar in a desktop menu'
	@echo '*'

install-strip: libakfavatar.so libakfavatar.a installdirs install-info install-man
	$(INSTALL_DATA) $(srcdir)/akfavatar.h $(DESTDIR)$(includedir)
	$(INSTALL_DATA) $(srcdir)/avtaddons.h $(DESTDIR)$(includedir)
	$(INSTALL_DATA) -s $(LIBNAME) $(DESTDIR)$(libdir)
	-ln -sf $(LIBNAME) $(DESTDIR)$(libdir)/$(SONAME)
	-ln -sf $(LIBNAME) $(DESTDIR)$(libdir)/libakfavatar.so
	$(INSTALL_DATA) libakfavatar.a $(DESTDIR)$(libdir)
	$(INSTALL_DATA) libavtaddons.a $(DESTDIR)$(libdir)
	-$(LDCONFIG) $(libdir)
	-$(INSTALL_PROGRAM) -s lua-akfavatar-bin $(DESTDIR)$(bindir)/lua-akfavatar
	$(INSTALL_PROGRAM) $(srcdir)/avtcmd $(DESTDIR)$(bindir)
	$(INSTALL_DATA) $(srcdir)/README $(DESTDIR)$(docdir)
	$(INSTALL_DATA) $(srcdir)/AUTHORS $(DESTDIR)$(docdir)
	$(INSTALL_DATA) $(srcdir)/COPYING $(DESTDIR)$(docdir)
	$(INSTALL_DATA) $(srcdir)/NEWS $(DESTDIR)$(docdir)
	$(INSTALL_DATA) $(LUA_MODULES) $(DESTDIR)$(LUA_PATH)/akfavatar
	-$(INSTALL_DATA) -s lua-akfavatar.so $(DESTDIR)$(LUA_CPATH)
	-$(INSTALL_DATA) -s base64.so $(DESTDIR)$(LUA_CPATH)
	-$(INSTALL_DATA) -s akfavatar-vorbis.so $(DESTDIR)$(LUA_CPATH)
	-$(INSTALL_DATA) -s akfavatar-term.so $(DESTDIR)$(LUA_CPATH)
	-$(INSTALL_DATA) -s akfavatar-canvas.so $(DESTDIR)$(LUA_CPATH)
	-rm -f $(DESTDIR)$(LUA_PATH)/lua-akfavatar.lua
	@echo '*'
	@echo '* use "make install-desktop-menu" to install lua-akfavatar in a desktop menu'
	@echo '*'

install-desktop-menu: $(srcdir)/akfavatar.xpm
	xdg-icon-resource install --size 32 --novendor $(srcdir)/akfavatar.xpm akfavatar
	xdg-icon-resource install --size 32 --novendor $(srcdir)/lua.xpm lua
	xdg-desktop-menu install $(srcdir)/akfoerster-lua-akfavatar.desktop

uninstall: uninstall-info uninstall-man uninstall-txt uninstall-html \
           uninstall-dvi uninstall-ps uninstall-pdf
	-rm -f $(includedir)/akfavatar.h
	-rm -f $(includedir)/avtaddons.h
	-rm -f $(includedir)/avtcio.h # from old installations
	-rm -f $(libdir)/$(LIBNAME)
	-rm -f $(libdir)/$(SONAME)
